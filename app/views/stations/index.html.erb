<h1>Stations</h1>

<table class="table">
  <thead>
    <tr>
      <th>Address</th>
      <th>Total Positions</th>
      <th>Available Positions</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @stations.each do |station| %>
      <tr>
        <td><%= station.address %></td>
        <td><%= station.total_positions %></td>
        <td><%= station.available_positions %></td>
        <td><%= link_to 'Select', new_rental_path, class: 'btn btn-success btn-sm' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
