<h1>Stations</h1>

<table class="table w-50">
  <thead>
    <tr>
      <th>Address</th>
      <th>Available Bikes</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @stations.each do |station| %>
      <tr>
        <td><%= station.address %></td>
        <td><%= station.available_bikes %></td>
        <td><%= link_to 'Select', new_station_rental_path(station), class: 'btn btn-success btn-sm' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
